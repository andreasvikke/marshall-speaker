{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "dk.andreasvikke.marshall-speaker",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Marshall Speaker"
  },
  "description": {
    "en": "Adds support for Marshall Speaker Devices."
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Andreas Vikke",
    "email": "andreasvikke@gmail.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "marshall_mode_changed",
        "title": {
          "en": "The mode has changed"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=marshall-speaker"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "marshall_mode",
        "title": {
          "en": "Set Mode"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=marshall-speaker"
          },
          {
            "type": "dropdown",
            "name": "mode",
            "title": {
              "en": "Mode to enable"
            },
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "AUX"
                }
              },
              {
                "id": "7",
                "label": {
                  "en": "RCA"
                }
              },
              {
                "id": "5",
                "label": {
                  "en": "Bluetooth"
                }
              },
              {
                "id": "6",
                "label": {
                  "en": "Radio"
                }
              },
              {
                "id": "8",
                "label": {
                  "en": "Spotify"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "marshall-speaker",
      "name": {
        "en": "Marshall Speaker"
      },
      "class": "speaker",
      "capabilities": [
        "volume_set",
        "marshall_mode"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/marshall-speaker/assets/images/small.png",
        "large": "/drivers/marshall-speaker/assets/images/large.png",
        "xlarge": "/drivers/marshall-speaker/assets/images/xlarge.png"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General Settings"
          },
          "collapsed": false,
          "children": [
            {
              "id": "address",
              "type": "text",
              "label": {
                "en": "IP Address",
                "dk": "IP Adresse"
              },
              "placeholder": {
                "en": "IP Address",
                "dk": "IP Adresse"
              },
              "value": "127.0.0.1",
              "hint": {
                "en": "The IP address of the Marshall Speaker",
                "dk": "IP adressen på Marshall højttaleren"
              }
            },
            {
              "id": "pincode",
              "type": "text",
              "label": {
                "en": "PIN Code",
                "dk": "PIN kode"
              },
              "placeholder": {
                "en": "PIN Code",
                "dk": "PIN kode"
              },
              "value": "0000",
              "hint": {
                "en": "The PIN code of the Marshall Speaker",
                "dk": "PIN koden på Marshall højttaleren"
              }
            }
          ]
        }
      ],
      "discovery": "marshall_speaker_mdns",
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "marshall_mode": {
      "type": "enum",
      "title": {
        "en": "Marshall Mode Picker"
      },
      "values": [
        {
          "id": "0",
          "title": {
            "en": "Aux"
          }
        },
        {
          "id": "7",
          "title": {
            "en": "RCA"
          }
        },
        {
          "id": "5",
          "title": {
            "en": "Bluetooth"
          }
        },
        {
          "id": "6",
          "title": {
            "en": "Radio"
          }
        },
        {
          "id": "8",
          "title": {
            "en": "Spotify"
          }
        }
      ],
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "uiQuickAction": true
    }
  },
  "discovery": {
    "marshall_speaker_mdns": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "zound",
        "protocol": "tcp"
      },
      "id": "{{address}}"
    }
  }
}